<%- include('../header', { title: 'BookStore - Author edit or create' }) -%>
<%- include('../navigation', { isBook: false }) -%>
<form method="post" class="container mb-2">
    <div class="row mt-1">
        <div class="col-6 pull-left p-0">
            <h1 class="text-left">Author edit or create</h1>
        </div>
        <div class="col-6 pull-right p-0 d-flex align-items-center justify-content-end">
            <a class="btn btn-light add-book mb-0" style="width: 20%;" href="/author" role="button">Back</a>
        </div>
    </div>
    <div class="row main-container">
        <div class="col-12">
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="name" class="align-middle">Author name</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="name" name="name" type="text" class="align-middle" required
                                value="<%= (typeof author === 'undefined') ? '' : author.name %>"></input>
                    </div>
                </div>
            </div>
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="bornPlace" class="align-middle">Born place</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="bornPlace" name="bornPlace" type="text" class="align-middle" required
                            value="<%= (typeof author === 'undefined') ? '' : author.bornPlace %>"></input>
                    </div>
                </div>
            </div>
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="bornTime" class="align-middle">Born time</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="bornTime" name="bornTime" type="date" class="align-middle" required
                            value="<%= (typeof author === 'undefined') ? '' : author.bornTime.toISOString().slice(0, 10) %>"></input>
                    </div>
                </div>
            </div>
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="alias" class="align-middle">Alias</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="alias" name="alias" type="text" class="align-middle" required
                            value="<%= (typeof author === 'undefined') ? '' : author.alias %>"></input>
                    </div>
                </div>
            </div>
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="deathPlace" class="align-middle">Death place</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="deathPlace" name="deathPlace" type="text" class="align-middle" required
                            value="<%= (typeof author === 'undefined') ? '' : author.deathPlace %>"></input>
                    </div>
                </div>
            </div>
            <div class="form-group row row-data col-12 my-2 mx-auto py-3">
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <label for="deathTime" class="align-middle">Death time</label>
                    </div>
                </div>
                <div class="col-md-6 col-12 my-2">
                    <div class="row mx-3 py-4 white-bg">
                        <input id="deathTime" name="deathTime" type="date" class="align-middle" required
                            value="<%= (typeof author === 'undefined') ? '' : author.deathTime.toISOString().slice(0, 10) %>"></input>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <input type="submit" class="btn btn-light add-book" style="width: 100%;" value="Save author"/>
                </div>
            </div>
        </div>
    </div>
</form>
<%- include('../footer') -%>