<%- include('../header', { title: 'BookStore - Book details' }) -%>
  <%- include('../navigation', { isBook: true }) -%>
  <div class="container mb-2">
    <div class="row mt-1">
      <div class="col-6 pull-left p-0">
        <h1 class="text-left"><%= book.title %></h1>
      </div>
      <div class="col-6 pull-right p-0 d-flex align-items-center justify-content-end">
        <a class="btn btn-light add-book mb-0" style="width: 20%;" href="/" role="button">Back</a>
      </div>
    </div>
    <div class="row main-container">
      <div class="col-12">
        <div class="row row-data col-12 my-2 mx-auto py-3">
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle">Author</span>
            </div>
          </div>
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle"><%= book.author.name %></span>
            </div>
          </div>
        </div>
        <div class="row row-data col-12 my-2 mx-auto py-3">
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle">Genre</span>
            </div>
          </div>
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle"><%= book.genre %></span>
            </div>
          </div>
        </div>
        <div class="row row-data col-12 my-2 mx-auto py-3">
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle">Language</span>
            </div>
          </div>
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle"><%= book.language %></span>
            </div>
          </div>
        </div>
        <div class="row row-data col-12 my-2 mx-auto py-3">
          <div class="col-md-6 col-12 my-2">
            <div class="row mx-3 py-4 white-bg">
              <span class="align-middle">In stock</span>
            </div>
          </div>
          <div class="col-md-6 col-12 my-2">
            <% if (book.isStocked) { %>
              <div class="row mx-3 py-4 white-bg green-bg">
                <span class="align-middle">Stocked</span>
              </div>
            <% } else { %>
              <div class="row mx-3 py-4 white-bg red-bg">
                <span class="align-middle">Not stocked</span>
              </div>
            <% } %>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <a class="btn btn-light add-book" style="width: 100%;" href="/book/edit/<%= book.id %>" role="button">Edit book</a>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <a class="btn btn-light add-book" style="width: 100%;" href="/book/del/<%= book.id %>" role="button">Delete book</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<%- include('../footer') -%>